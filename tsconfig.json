{
  "compilerOptions": {
    "baseUrl": "./packages",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "preserveSymlinks": true,
    "allowJs": true,
    "noLib": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es6"]
  },
  "exclude": ["node_modules", "**/coverage", "**/*.spec.ts"],
  "paths": {
    "@slack-wrench/*": ["*/src"]
  }
}
