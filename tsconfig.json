{
  "compilerOptions": {
    "baseUrl": "./packages",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true
  },
  "exclude": ["node_modules", "**/coverage"],
  "paths": {
    "@slack-wrench/*": ["./*/src"]
  }
}
